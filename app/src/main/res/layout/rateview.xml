        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_margin="5dp"
        android:tint="@color/colorAccentDark"
        app:srcCompat="@drawable/star" />

    <ImageView
        android:id="@+id/star_two"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_margin="5dp"
